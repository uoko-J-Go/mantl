[Unit]
Description=docker swarm (agent)
After=docker.service
After=consul.service
PartOf=docker.service
Requires=consul.service

[Service]
Restart=on-failure
RestartSec=20

ExecStart=/usr/bin/docker run --rm \
    --name swarm-agent \
    swarm join \
    --advertise "{{ private_ipv4 }}:{{ swarm_agent_port }}" \
    {% if do_consul_ssl -%}
    --discovery-opt kv.cacertfile=/etc/pki/ca-trust/source/anchors/cacert.pem \
    --discovery-opt kv.certfile=/etc/pki/tls/certs/host.cert \
    --discovery-opt kv.keyfile=/etc/pki/tls/private/host.key
    {%- endif %}
    consul://consul.service.consul:8500/nodes

ExecStop=/usr/bin/docker kill swarm-agent

[Install]
WantedBy=multi-user.target
