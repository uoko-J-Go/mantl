[Unit]
Description=docker swarm (agent)
After=docker.service
After=consul.service
PartOf=docker.service
Requires=consul.service

[Service]
Restart=always
RestartSec=20
TimeoutStartSec=20m

ExecStartPre=-/usr/bin/docker rm -f swarm-agent
ExecStartPre=-/usr/bin/docker pull {{ swarm_image }}
ExecStart=/usr/bin/docker run \
    --rm \
    --name=swarm-agent \
    --volume={{ consul_ca_cert }}:{{ consul_ca_cert }}:ro \
    --volume={{ consul_cert }}:{{ consul_cert }}:ro \
    --volume={{ consul_key }}:{{ consul_key }}:ro \
    {{ swarm_image }} join \
    --advertise {{ private_ipv4 }}:{{ swarm_agent_port }} \
    {% if do_consul_ssl -%}
    --discovery-opt "kv.cacertfile={{ consul_ca_cert }}" \
    --discovery-opt "kv.certfile={{ consul_cert }}" \
    --discovery-opt "kv.keyfile={{ consul_key }}" \
    {% endif -%}
    consul://consul.service.consul:8500/nodes

ExecStop=/bin/bash -c " \
    /usr/bin/docker kill swarm-agent && \
    /usr/bin/docker rm -f swarm-agent"

[Install]
WantedBy=multi-user.target
