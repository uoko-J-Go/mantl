[Unit]
Description=docker swarm (agent)
After=docker.service
After=consul.service
PartOf=docker.service
Requires=consul.service

[Service]
Restart=always
RestartSec=20
TimeoutStartSec=20m

ExecStartPre=-/usr/bin/docker rm -f swarm-agent
ExecStartPre=-/usr/bin/docker pull {{ swarm_image }}
ExecStart=/usr/bin/docker run
    --rm \
    --name swarm-agent \
    {{ swarm_image }} \
    join \
    --advertise {{ private_ipv4 }}:{{ swarm_agent_port }} \
    {% if do_consul_ssl -%}
    {% for discovery_opt in swarm_tls_discovery_options -%}
    --discovery-opt {{ discovery_opt }}
    {%- endfor %}
    {%- endif %}
    consul://consul.service.consul:8500/nodes

ExecStop=/bin/bash -c " \
    /usr/bin/docker kill swarm-agent && \
    /usr/bin/docker rm -f swarm-agent"

[Install]
WantedBy=multi-user.target
